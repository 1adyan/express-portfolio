<div class="container my-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Contact Me</h1>
      <p class="lead text-center">
        Feel free to reach out using the form below or connect with me on social media.
      </p>
    </div>
  </div>

  <div class="row mt-5">
    <!-- Contact Form -->
    <div class="col-md-8 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4><i class="fas fa-paper-plane"></i> Send Me a Message</h4>
        </div>
        <div class="card-body">
          <!-- html5 form with Bootstrap styling and validation -->
          <form action="mailto:adyan.iqbal@example.com" method="post" enctype="text/plain" id="contactForm">
            
            <!-- Name field -->
            <div class="mb-3">
              <label for="name" class="form-label">
                <i class="fas fa-user"></i> Name <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name" 
                placeholder="Enter your full name"
                required>
            </div>

            
            <div class="mb-3">
              <label for="email" class="form-label">
                <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
              </label>
              <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                placeholder="your.email@example.com"
                required>
            </div>

            <!-- Phone field -->
            <div class="mb-3">
              <label for="phone" class="form-label">
                <i class="fas fa-phone"></i> Cell No <span class="text-danger">*</span>
              </label>
              <input 
                type="tel" 
                class="form-control" 
                id="phone" 
                name="phone" 
                pattern="[0-9]{10}" 
                placeholder="1234567890"
                required>
              <small class="form-text text-muted">Please enter 10 digits (no spaces or dashes)</small>
            </div>

            <!-- Message textarea -->
            <div class="mb-3">
              <label for="message" class="form-label">
                <i class="fas fa-comment"></i> Message <span class="text-danger">*</span>
              </label>
              <textarea 
                class="form-control" 
                id="message" 
                name="message" 
                rows="5" 
                placeholder="Write your message here..."
                required></textarea>
            </div>

            <!-- Submit and Reset buttons -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button type="reset" class="btn btn-secondary">
                <i class="fas fa-redo"></i> Reset
              </button>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane"></i> Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Information Cards -->
  <div class="row mt-5">
    <div class="col-md-4 mb-3">
      <div class="card text-center h-100">
        <div class="card-body">
          <i class="fas fa-envelope fa-3x text-primary mb-3"></i>
          <h5>Email</h5>
          <p><a href="mailto:adyaniqbal17@gmail.com">adyaniqbal17@gmail.com</a></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-3">
      <div class="card text-center h-100">
        <div class="card-body">
          <i class="fab fa-github fa-3x text-dark mb-3"></i>
          <h5>GitHub</h5>
          <p><a href="https://github.com/1adyan" target="_blank">https://github.com/1adyan</a></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-3">
      <div class="card text-center h-100">
        <div class="card-body">
          <i class="fab fa-linkedin fa-3x text-info mb-3"></i>
          <h5>LinkedIn</h5>
          <p><a href="https://www.linkedin.com/in/adyan-iqbal-26476a325" target="_blank">Connect with me</a></p>
        </div>
      </div>
    </div>
  </div>
